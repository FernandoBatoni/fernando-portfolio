---
interface Props {
	title: string;
	tagline?: string;
	align?: 'start' | 'center';
}

const { align = 'center', tagline, title } = Astro.props;
---

<div class:list={['hero stack gap-4', align]}>
	<div class="hero__stack gap-2">
		<h1 class="hero__title">{title}</h1>
		{tagline && <p class="hero__tagline">{tagline}</p>}
	</div>
	<slot />
</div>
